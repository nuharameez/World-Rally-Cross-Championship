<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #d7d7d7;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progcw.Menu">
   <children>
      <Label fx:id="title" layoutX="48.0" prefHeight="90.0" prefWidth="514.0" text="World Rally Cross Championship" textFill="#21288e">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="35.0" />
         </font>
      </Label>
      <Button fx:id="addButton" alignment="CENTER" layoutX="36.0" layoutY="107.0" mnemonicParsing="false" onAction="#onAddButtonClick" prefHeight="23.0" prefWidth="134.0" style="-fx-background-color: #a8a8a8;" text="Add driver details " textFill="#615b96">
         <font>
            <Font name="Georgia" size="13.0" />
         </font></Button>
      <Button fx:id="deleteButton" alignment="CENTER" layoutX="37.0" layoutY="157.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" style="-fx-background-color: #a8a8a8;" text="Delete driver details" textFill="#615b96">
         <font>
            <Font name="Georgia" size="13.0" />
         </font></Button>
      <Button fx:id="updateButton" alignment="CENTER" layoutX="37.0" layoutY="212.0" mnemonicParsing="false" onAction="#onUpdateButtonClick" style="-fx-background-color: #a8a8a8;" text="Update driver details" textFill="#615b96">
         <font>
            <Font name="Georgia" size="13.0" />
         </font></Button>
      <Button alignment="CENTER" layoutX="304.0" layoutY="107.0" mnemonicParsing="false" onAction="#onRandomRaceButtonClick" style="-fx-background-color: #a8a8a8;" text="Simulating a random race" textFill="#615b96">
         <font>
            <Font name="Georgia" size="13.0" />
         </font>
      </Button>
      <Button alignment="CENTER" layoutX="37.0" layoutY="269.0" mnemonicParsing="false" onAction="#onStandingTableButtonClick" style="-fx-background-color: #a8a8a8;" text="Viewing the rally cross standings table " textFill="#615b96">
         <font>
            <Font name="Georgia" size="13.0" />
         </font>
      </Button>
      <Button alignment="CENTER" layoutX="304.0" layoutY="160.0" mnemonicParsing="false" onAction="#onRaceTableButtonClick" style="-fx-background-color: #a8a8a8;" text="Viewing race table sorted according to the date" textFill="#615b96">
         <font>
            <Font name="Georgia" size="13.0" />
         </font>
      </Button>
      <Button alignment="CENTER" layoutX="304.0" layoutY="212.0" mnemonicParsing="false" onAction="#onSaveButtonClick" style="-fx-background-color: #a8a8a8;" text="Save the current data to a text file" textFill="#615b96">
         <font>
            <Font name="Georgia" size="13.0" />
         </font>
      </Button>
      <Button alignment="CENTER" layoutX="304.0" layoutY="269.0" mnemonicParsing="false" onAction="#onLoadButtonClick" style="-fx-background-color: #a8a8a8;" text="Load data from the saved text file" textFill="#615b96">
         <font>
            <Font name="Georgia" size="13.0" />
         </font>
      </Button>
      <Button alignment="CENTER" layoutX="262.0" layoutY="340.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="74.0" style="-fx-background-color: #a8a8a8;" text="Exit" textFill="#615b96">
         <font>
            <Font name="Georgia" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
